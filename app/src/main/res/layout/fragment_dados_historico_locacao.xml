<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/veiculo"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Ford"
                    android:id="@+id/txtMarca"
                    android:fontFamily="@font/montserratregular"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:id="@+id/txtModelo"
                    android:textStyle="bold"
                    android:text="Ford KA 2019"
                    android:fontFamily="@font/montserratregular"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Ano 2016"
                    android:id="@+id/txtAno"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserratregular"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Valor:"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtAas"
                        android:textSize="16dp"
                        android:fontFamily="@font/montserratregular"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="R$ 450"
                        android:textSize="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtsDa"
                        android:fontFamily="@font/montserratregular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Data da locação:"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtAcessorio"
                        android:textSize="16dp"
                        android:fontFamily="@font/montserratregular"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" 22/10/2015"
                        android:textSize="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtData"
                        android:fontFamily="@font/montserratregular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Avaliação:"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtAs"
                        android:textSize="16dp"
                        android:fontFamily="@font/montserratregular"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Eu amei deemais a locação, o cara é muito atencioso!"
                        android:textSize="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtDa"
                        android:fontFamily="@font/montserratregular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Estrelas:"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtA"
                        android:textSize="16dp"
                        android:fontFamily="@font/montserratregular"
                        android:layout_marginBottom="20dp"/>
                    <RatingBar
                        android:id="@+id/rbAvaliacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:theme="@style/RatingBar"/>

                </LinearLayout>





            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:background="@drawable/fundodados"
            android:scaleType="fitXY"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/peerfil"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Katherine Lang"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/montserratregular"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Entrou desde janeiro de 2015"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserratregular"
                android:textAlignment="center"
                android:textColor="#fff"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_star_black_24dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_star_black_24dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_star_black_24dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_star_black_24dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_star_half_black_24dp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</ScrollView>



