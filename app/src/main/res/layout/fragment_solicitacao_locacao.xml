<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/barcelon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/azulPadrao"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitação de locação"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textAlignment="center"
            android:fontFamily="@font/montserratregular"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_btn_entrar"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginTop="100dp">


    <TextView
        android:id="@+id/txtModeloMarca"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="Definir data e horário do inicio: "
        android:textColor="#fff"
        android:textSize="16dp"
        android:fontFamily="@font/montserratregular"/>


    <Button
        android:id="@+id/btnInicio"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:text="Definir inicio"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserratregular"
        android:background="@drawable/border_edt_text"/>

        <TextView
            android:id="@+id/txtInicio"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserratregular"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definir data e horário do fim: "
        android:textSize="16dp"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserratregular"/>

    <Button
        android:id="@+id/btnFim"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_edt_text"
        android:text="Definir fim"
        android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/txtFim"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserratregular"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSolicitar"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:text="Solicitar"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:background="@drawable/fundo_solicitacao_locacao"/>
</LinearLayout>